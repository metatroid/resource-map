%button.toggle-btn#menu-btn.menu-btn
  %span.screen-reader
    Toggle Menu
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
%nav#siteNav
  .nav-intro{ng-bind-html: "htmlSafe(settings.about_text)"}
  -#.nav-item
    %a.link.link-page{href: "#page_map"}
      Map
  .nav-item.nav-item-social
    %a.link.link-social{ng-repeat: "profile in settings.social_media_links", href: "{{profile.url}}", title: "{{profile.service}}", target: "_blank"}
      %span.icon.fa{class: "fa-{{profile.service}}"}